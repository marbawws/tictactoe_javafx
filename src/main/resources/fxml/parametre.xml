<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.CheckBox?>
<?import tictactoe_javafx_vues_composant.CheckBoxTailleGrilleImageAnimee?>
<VBox xmlns:fx="http://javafx.com/fxml" styleClass="conteneurPrincipal" VBox.vgrow="ALWAYS">
	<HBox styleClass="conteneurTitre" >
		<Text text="%para"/>
	</HBox>
	<HBox VBox.vgrow="ALWAYS">
		<VBox styleClass="conteneursSizeGrid"  HBox.hgrow="ALWAYS"> 
			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurSizeGrid">
			<Text text="%gridSize"/>
			</HBox>
			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurSizeGrid">
			<CheckBoxTailleGrilleImageAnimee text="%average" url="../images/x_rouge.png" HBox.hgrow="ALWAYS"/>
			</HBox>
			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurSizeGrid">
			<CheckBoxTailleGrilleImageAnimee text="%big" url="../images/x_rouge.png" HBox.hgrow="ALWAYS"/>
			</HBox>
			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurSizeGrid">
			<CheckBoxTailleGrilleImageAnimee text="%massive" url="../images/x_rouge.png" HBox.hgrow="ALWAYS"/>
			</HBox>
		</VBox>
	</HBox>
</VBox>