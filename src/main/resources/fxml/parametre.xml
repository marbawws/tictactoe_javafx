<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.CheckBox?>
<?import tictactoe_javafx_vues_composant.ImageAjustableAnimee?>
<VBox xmlns:fx="http://javafx.com/fxml" styleClass="conteneurPrincipal" VBox.vgrow="ALWAYS">
	<HBox styleClass="conteneurTitre" >
		<Text text="%para"/>
	</HBox>
	<HBox VBox.vgrow="ALWAYS">
		<VBox styleClass="conteneursSizeGrid"  HBox.hgrow="ALWAYS"> 
				<ImageAjustableAnimee  url="/images/x_rouge.png" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" styleClass="conteneurSizeGrid">
					<children>
						<Text text="%gridSize"/>
					</children>
				</ImageAjustableAnimee>
	
				<ImageAjustableAnimee  url="/images/x_rouge.png" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" styleClass="conteneurSizeGrid">
					<children>
						<CheckBox text="%average" HBox.hgrow="ALWAYS"/>
					</children>
				</ImageAjustableAnimee>
			
			
				<ImageAjustableAnimee  url="/images/x_rouge.png" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" styleClass="conteneurSizeGrid">
					<children>
						<CheckBox text="%big" HBox.hgrow="ALWAYS"/>
					</children>
				</ImageAjustableAnimee>
			
			
				<ImageAjustableAnimee  url="/images/x_rouge.png" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" styleClass="conteneurSizeGrid">
					<children>
						<CheckBox text="%massive" HBox.hgrow="ALWAYS"/>
					</children>
				</ImageAjustableAnimee>
			
		</VBox>
	</HBox>
</VBox>