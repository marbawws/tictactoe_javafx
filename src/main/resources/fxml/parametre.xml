<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.StackPane?>
<?import tictactoe_javafx.vues.composant.ImageAjustableAnimee?>
<VBox xmlns:fx="http://javafx.com/fxml"
	styleClass="conteneurPrincipal" 
	fx:controller="tictactoe_javafx.vues.VueParametresFX"
	VBox.vgrow="ALWAYS">
	<HBox styleClass="conteneurTitre">
		<Text text="%para" />
	</HBox>
	<HBox VBox.vgrow="ALWAYS">
		<VBox styleClass="conteneursSizeGrid" HBox.hgrow="ALWAYS">
			<StackPane HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
				styleClass="stackPane">
				<HBox 
					HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
					styleClass="conteneurSizeGrid">
				</HBox>
				<Text text="%parametre" styleClass="text" />
			</StackPane>
			<StackPane HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
				styleClass="stackPane">
				<ImageAjustableAnimee url="/images/x_rouge.png"
					HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
					styleClass="conteneurSizeGrid">
				</ImageAjustableAnimee>
				<CheckBox fx:id="checkBoxScore" text="%afficherScore" HBox.hgrow="ALWAYS" styleClass="check-box" />
			</StackPane>
			<StackPane HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
				styleClass="stackPane">
				<ImageAjustableAnimee url="/images/x_rouge.png"
					HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
					styleClass="conteneurSizeGrid">
				</ImageAjustableAnimee>
				<CheckBox fx:id="checkBoxAnimations" text="%activerAnimations" HBox.hgrow="ALWAYS" />
			</StackPane>
			<StackPane HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
				styleClass="stackPane">
				<ImageAjustableAnimee url="/images/x_rouge.png"
					HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
					styleClass="conteneurSizeGrid">
				</ImageAjustableAnimee>
				<CheckBox fx:id="checkBoxSauvegarderParametres" text="%sauvegarder" HBox.hgrow="ALWAYS" />
			</StackPane>
		</VBox>
	</HBox>
</VBox>