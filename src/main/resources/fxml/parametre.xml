<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.CheckBox?>
<VBox xmlns:fx="http://javafx.com/fxml" styleClass="conteneurPrincipal" VBox.vgrow="ALWAYS">
	<HBox  styleClass="conteneurTitre" >
		<Text text="Tic Tac Toe - Paramètres"/>
	</HBox>
	<HBox VBox.vgrow="ALWAYS">
		<VBox styleClass="conteneursDifficulty"  HBox.hgrow="ALWAYS">
			<Text text="Difficulté" />
			
			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurDifficulty">
			<CheckBox text="Facile" HBox.hgrow="ALWAYS"/>
			</HBox>
			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurDifficulty">
			<CheckBox text="Moyen" HBox.hgrow="ALWAYS"/>
			</HBox>
			<HBox VBox.vgrow="ALWAYS" styleClass="conteneurDifficulty">
			<CheckBox text="Impossible" HBox.hgrow="ALWAYS"/>
			</HBox>
		</VBox>
	</HBox>
</VBox>